*
	font-family 'Roboto', sans-serif

h1
	font-family 'Roboto Slab', serif
	margin-bottom 2rem
	margin-top 0

input, button
	border 4px solid #c9c9c9
	border-radius 0
	padding 0.5rem

input
	background-color #f0f0f0
	border-radius 0
	outline 0
	&:focus
		background-color #fff
		border-color green

button
	background-color #c9c9c9
	color #fff
	&:hover
		background-color #808080
		border-color #808080
	&:focus
		background-color green
		border 4px solid green
		border-radius 0
		color #fff
		outline 0
	&.button-clear
		&:focus
			background-color red
			border-color red